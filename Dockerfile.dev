FROM node:20-alpine

# Install dumb-init
RUN apk add --no-cache dumb-init

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose ports for both server and vite
EXPOSE 9901 5173

# Start development server
ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "run", "dev"]